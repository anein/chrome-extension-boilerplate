{
  "name"           : "chrome-extension-boilerplate",
  "description"    : "A template project for Chome, Opera and FireFox extensions based on typescript and webpack",
  "author"         : "Alexander Ein (@alexanderein)",
  "version"        : "1.0.0",
  "license"        : "MIT",
  "private"        : false,
  "scripts"        : {
    "dev"         : "webpack --watch --progress --config config/webpack.dev.config.js",
    "build:chrome": "webpack --env.browser=chrome --config config/webpack.prod.config.js",
    "build"       : "webpack --config config/webpack.prod.config.js",
    "format"      : "pretty-quick",
    "lint"        : "tslint -c ./tslint.json -p ./tsconfig.json",
    "pre-commit"  : "yarn run lint && yarn run format"
  },
  "husky"          : {
    "hooks": {
      "pre-commit": "yarn run lint",
      "pre-push"  : "yarn run format && yarn run build"
    }
  },
  "devDependencies": {
    "@types/chrome"              : "^0.0.74",
    "@types/core-js"             : "^2.5.0",
    "copy-webpack-plugin"        : "^4.5.4",
    "css-loader"                 : "^1.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin"        : "^3.2.0",
    "husky"                      : "^1.2.0",
    "lint-staged"                : "^8.0.4",
    "mini-css-extract-plugin"    : "^0.4.4",
    "node-sass"                  : "^4.9.4",
    "postcss-cssnext"            : "^3.1.0",
    "postcss-custom-properties"  : "^8.0.8",
    "postcss-import"             : "^12.0.1",
    "postcss-loader"             : "^3.0.0",
    "postcss-nesting"            : "^7.0.0",
    "postcss-preset-env"         : "^6.3.0",
    "prettier"                   : "^1.14.3",
    "pretty-quick"               : "^1.8.0",
    "sass-loader"                : "^7.1.0",
    "style-loader"               : "^0.23.1",
    "ts-loader"                  : "^5.2.2",
    "tslint"                     : "^5.11.0",
    "tslint-config-prettier"     : "^1.15.0",
    "typescript"                 : "^3.1.3",
    "webpack"                    : "^4.20.2",
    "webpack-cli"                : "^3.1.2",
    "webpack-externals-plugin"   : "^1.0.0",
    "webpack-md5-hash"           : "^0.0.6",
    "webpack-merge"              : "^4.1.4"
  },
  "dependencies"   : {}
}
